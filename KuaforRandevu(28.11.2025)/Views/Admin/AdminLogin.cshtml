@{
    ViewBag.Title = "Admin Login";
    Layout = null;
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Admin Giriş</h2>

        @if (ViewBag.Error != null)
        {
            <p class="login-error">@ViewBag.Error</p>
        }

        <form method="post">
            <div class="login-group">
                <label>Kullanıcı Adı</label>
                <input type="text" name="username" required class="login-input" />
            </div>

            <div class="login-group">
                <label>Şifre</label>
                <input type="password" name="password" required class="login-input" />
            </div>

            <button type="submit" class="login-btn">Giriş Yap</button>
        </form>
    </div>
</div>
